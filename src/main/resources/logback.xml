<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy.MM.dd HH:mm:ss.SSS, UTC} %highlight(%-4level) [%thread] %logger{50} - %msg%n</pattern>
        </encoder>
    </appender>
    <root level="info">
        <!-- for logging -->
        <!-- <root level="trace">-->
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>